<div class="page">
  {{#with header}}
  <div class="header">

    <header class="header__content">
      <div class="header__block">
        <img src="/svg/apple.svg" alt="apple" class="header__icon">

        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <img src="/svg/search.svg" alt="search" class="header__icon">
        <img src="/svg/profile.svg" alt="profile" class="header__icon">
      </div>
    </header>
  </div>
  <div class="section__ad">
    <div class="header__ad">
      <div class="ad__title">{{ad.title}}</div>
      <div class="ad__link">
        <a href="{{ad.link.url}}" class="link">{{ad.link.text}}</a>
        <img src="/svg/arrow.svg" alt="arrow" class="header__icon">
      </div>
    </div>
  </div>
  {{/with}}

  {{#with iphone_pro}}
  <section class="produkt produkt--big produkt--iphone-pro produkt--dark product--top">
    <div class="produkt__content">
      <h1 class="produkt__title">{{title}}</h1>
      <p class="produkt__description">{{descriptions}}</p>
      <div class="produkt__action">
        {{#with link}}
        {{#each text}}
        <a href="{{../link}}" class="produkt__link">{{this}}</a>
        {{/each}}
        {{/with}}
      </div>
    </div>
  </section>
  {{/with}}

